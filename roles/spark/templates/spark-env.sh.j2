# spark-env.sh
export SPARK_MASTER_HOST={{ spark_master_host }}
export JAVA_HOME={{ java_home }}
export SPARK_WORKER_MEMORY={{ spark_worker_memory }}
export SPARK_WORKER_CORES={{ spark_worker_cores }}
export SPARK_DAEMON_MEMORY={{ spark_daemon_memory }}
export SPARK_MASTER_PORT={{ spark_master_port }}
export SPARK_MASTER_WEBUI_PORT={{ spark_master_webui_port }}
export SPARK_WORKER_PORT={{ spark_worker_port }}
export SPARK_WORKER_WEBUI_PORT={{ spark_worker_webui_port }}

# High Availability Configuration
export SPARK_MASTER_OPTS="-Dspark.deploy.recoveryMode=ZOOKEEPER -Dspark.deploy.zookeeper.url={{ zookeeper_url }} -Dspark.deploy.zookeeper.dir={{ zookeeper_dir }}"
